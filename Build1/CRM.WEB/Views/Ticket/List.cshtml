@model IEnumerable<CRM.Models.TicketListModel>

@{
    ViewBag.Title = "TicketView";
}

<h2>TicketView</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="box box-primary">

            <div class="box-body">

                <table style="width: 100%" border="1" class="table table-striped table-bordered table-hovered">
                    <tr>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.DueDate)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.SeverityCode)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.Version)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.ProductId)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.ModuleId)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.IssueType)
                        </th>
                        <th style="text-align: center">Actions
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DueDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeverityCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Version)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModuleId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IssueType)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
            @Html.ActionLink("Details", "Details", new { id = item.Id })|
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="panel-footer" style="background-color: steelblue">
                <button type="button" class="btn btn-Data" style="margin-left: auto" onclick="CreateTicket();">Add New Ticket</button>
               @* <div class="btn btn-Data" style="margin-left: auto">
                    @Html.ActionLink("Create New", "Create")
                </div>*@
            </div>
        </div>
    </div>
</div>

<link href="~/Scripts/Plugins/bootstrap/bootstrap.css" rel="stylesheet" />

<script type="text/javascript">
    function CreateTicket() {
        window.location.href = '@Url.Content("Create")';
    }
</script>
